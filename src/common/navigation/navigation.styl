.navbar-wrapper
  /* Flip around the padding for proper display in narrow viewports */
.navbar-wrapper
  position absolute
  position relative
  top 0
  right 0
  left 0
  z-index 200

  > .container
    padding-right 0
    padding-left 0

  .navbar
    padding-right 15px
    padding-left 15px

    .container
      width auto

@media (min-width: 768px)
  .navbar-wrapper
    margin-top 0px

    .container
      padding-right 15px
      padding-left 15px

    .navbar
      padding-right: 0
      padding-left: 0
      border-radius: 4px